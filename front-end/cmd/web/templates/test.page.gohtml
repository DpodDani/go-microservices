{{template "base" .}}

{{define "content" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Test microservices</h1>
                <hr>
                <a id="brokerBtn" class="btn btn-outline-secondary" href="javascript:void(0);"> Broker Button </a>
                <a id="authBtn" class="btn btn-outline-danger" href="javascript:void(0);"> Auth Button </a>
                <a id="logBtn" class="btn btn-outline-info" href="javascript:void(0);"> Log Button </a>
                <a id="mailBtn" class="btn btn-outline-warning" href="javascript:void(0);"> Mail Button </a>
                <a id="grpcBtn" class="btn btn-outline-primary" href="javascript:void(0);"> gRPC Button </a>

                <div id="output" class="mt-5" style="outline: 1px solid silver; padding: 2em;">
                    <span class="text-muted">Output shows here...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-5">Sent</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="payload"><span class="text-muted">Nothing sent yet...</span></pre>
                </div>
            </div>
            <div class="col">
                <h4 class="mt-5">Received</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="received"><span class="text-muted">Nothing received yet...</span></pre>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
    let brokerBtn = document.getElementById("brokerBtn");
    let authBtn = document.getElementById("authBtn");
    let logBtn = document.getElementById("logBtn");
    let mailBtn = document.getElementById("mailBtn");
    let grpcBtn = document.getElementById("grpcBtn");

    let output = document.getElementById("output");
    let sent = document.getElementById("payload");
    let received = document.getElementById("received");

    brokerBtn.addEventListener("click", function() {
        const body = {
            "method": "POST",
        }

        fetch("http:\/\/localhost:8080", body)
        .then((response) => response.json())
        .then((data) => {
            sent.innerHTML = "empty post request";
            received.innerHTML = JSON.stringify(data, undefined, 4);
            if (data.error) {
                console.log(data.message);
            } else {
                output.innerHTML += `<br><strong>Response from Broker service</strong>: ${data.message}`;
            }
        })
        .catch((error) => {
            output.innerHTML += "<br><br>Error " + error;
        })
    });

    authBtn.addEventListener("click", function() {
        const headers = new Headers();
        headers.append("Content-Type", "applcation/json");

        const payload = {
            action: "authenticate",
            auth: {
                email: "admin@example.com",
                password: "verysecret",
            }
        };

        const body = {
            "method": "POST",
            "headers": headers,
            "body": JSON.stringify(payload),
        };

        fetch("http:\/\/localhost:8080/handle", body)
        .then((response) => response.json())
        .then((data) => {
            sent.innerHTML = JSON.stringify(payload, undefined, 4);
            received.innerHTML = JSON.stringify(data, undefined, 4);
            if (data.error) {
                console.log(data.message);
                output.innerHTML += `<br><strong>Error</strong>: ${data.message}`;
            } else {
                output.innerHTML += `<br><strong>Response from Broker service</strong>: ${data.message}`;
            }
        })
        .catch((error) => {
            output.innerHTML += "<br><br>Error " + error;
        })
    });

    logBtn.addEventListener("click", function() {
        const headers = new Headers();
        headers.append("Content-Type", "applcation/json");

        const payload = {
            action: "log",
            log: {
                name: "event",
                data: "top secret data",
            }
        };

        const body = {
            "method": "POST",
            "headers": headers,
            "body": JSON.stringify(payload),
        };

        fetch("http:\/\/localhost:8080/handle", body)
        .then((response) => response.json())
        .then((data) => {
            sent.innerHTML = JSON.stringify(payload, undefined, 4);
            received.innerHTML = JSON.stringify(data, undefined, 4);
            if (data.error) {
                console.log(data.message);
                output.innerHTML += `<br><strong>Error</strong>: ${data.message}`;
            } else {
                output.innerHTML += `<br><strong>Response from broker service</strong>: ${data.message}`;
            }
        })
        .catch((error) => {
            output.innerHTML += "<br><br>Error " + error;
        })
    });

    grpcBtn.addEventListener("click", function() {
        const headers = new Headers();
        headers.append("Content-Type", "applcation/json");

        const payload = {
            action: "log",
            log: {
                name: "event",
                data: "top secret gRPC data",
            }
        };

        const body = {
            "method": "POST",
            "headers": headers,
            "body": JSON.stringify(payload),
        };

        fetch("http:\/\/localhost:8080/log-grpc", body)
        .then((response) => response.json())
        .then((data) => {
            sent.innerHTML = JSON.stringify(payload, undefined, 4);
            received.innerHTML = JSON.stringify(data, undefined, 4);
            if (data.error) {
                console.log(data.message);
                output.innerHTML += `<br><strong>Error</strong>: ${data.message}`;
            } else {
                output.innerHTML += `<br><strong>Response from broker service</strong>: ${data.message}`;
            }
        })
        .catch((error) => {
            output.innerHTML += "<br><br>Error " + error;
        })
    });

    mailBtn.addEventListener("click", function() {
        const headers = new Headers();
        headers.append("Content-Type", "applcation/json");

        const payload = {
            action: "mail",
            mail: {
                from: "dan@example.com",
                to: "someone@example.com",
                subject: "test email",
                message: "this is a test email body.",
            }
        };

        const body = {
            "method": "POST",
            "headers": headers,
            "body": JSON.stringify(payload),
        };

        fetch("http:\/\/localhost:8080/handle", body)
        .then((response) => response.json())
        .then((data) => {
            sent.innerHTML = JSON.stringify(payload, undefined, 4);
            received.innerHTML = JSON.stringify(data, undefined, 4);
            if (data.error) {
                console.log(data.message);
                output.innerHTML += `<br><strong>Error</strong>: ${data.message}`;
            } else {
                output.innerHTML += `<br><strong>Response from broker service</strong>: ${data.message}`;
            }
        })
        .catch((error) => {
            output.innerHTML += "<br><br>Error " + error;
        })
    });
    </script>
{{end}}
